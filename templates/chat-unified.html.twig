<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BROADCOM - Chat Interface</title>
    <link rel="stylesheet" href="{{ asset('css/unified-style.css') }}">
</head>
<body>
    
    <div id="chatPage" class="page active">
        <div class="sidebar">
            <div class="sidebar-header">
                BroadCom
            </div>
            
            <div class="user-list" id="userList">
                {% for conversation in conversations %}
                    <div class="user-item">{% if conversation.utilisateur1.id == current_user.id %}{{ conversation.utilisateur2.PrÃ©nom }} {{conversation.utilisateur2.Nom }}{% else %}{{ conversation.utilisateur1.PrÃ©nom }} {{conversation.utilisateur1.Nom }} {% endif %}</div>
                {% endfor %}
            </div>
            
            <div class="alerts-section" id="alertsBtn">
                ALERTES
            </div>
        </div>

        <div class="chat-container">
            <div class="chat-header">
                <div class="chat-title" id="chatTitle">Utilisateur 1</div>
                <div class="header-actions">
                    <span id="currentUser">{{ current_user.Identifiant }}</span>
                    <form action="{{path('app_logout')}}">
                        <button class="quit-btn" id="quitBtnChat" type="submit">Se dÃ©connecter</button>
                    </form>
                </div>
            </div>

            <div class="messages-container" id="messagesContainer">
                {% for conversation in conversations %}
                    {% for message in conversation.getMessages() %}
                        <div>{{ message.texte }}</div>
                    {% endfor %}
                {% endfor %}
            </div>
            
            <div class="message-input-container">
                <div class="message-input-wrapper">
                    <input type="text" class="message-input" id="messageInput" placeholder="Tapez votre message...">
                    <button class="send-btn" id="sendBtn">Envoyer</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Page d'Alertes -->
    <div id="alertPage" class="page">
        <div class="sidebar">
            <div class="sidebar-header">
                BroadCom
            </div>
            
            <div class="user-list">
                <div class="user-item active">ðŸ“¢ ALERTES GROUPE</div>
            </div>
            
            <div class="alerts-section active">
                ALERTES
            </div>
        </div>

        <div class="chat-container">
            <div class="chat-header">
                <div class="chat-title">ðŸ“¢ ALERTES - Message de Groupe</div>
                <div class="header-actions">
                    <button class="quit-btn" id="quitBtnAlert">Quitter</button>
                </div>
            </div>
            
            <div class="messages-container" id="alertMessagesContainer">
                {% for alerte in alertes %}
                    {% if alerte.type == 'urgent' %}
                        <div class="alert-message urgent">
                            <div class="alert-header">
                                <span class="alert-badge urgent">URGENT</span>
                            </div>
                            <div class="alert-content">{{ alerte.texte }}</div>
                        </div>
                    {% endif %}

                    {% if alerte.type == 'important' %}
                        <div class="alert-message important">
                            <div class="alert-header">
                                <span class="alert-badge important">IMPORTANT</span>
                            </div>
                            <div class="alert-content">{{ alerte.texte }}</div>
                        </div>
                    {% endif %}

                    {% if alerte.type == 'information' %}
                        <div class="alert-message information">
                            <div class="alert-header">
                                <span class="alert-badge information">INFORMATION</span>
                            </div>
                            <div class="alert-content">{{ alerte.texte }}</div>
                        </div>
                    {% endif %}
                {% endfor %}
            
            <div class="alert-input-container">
                <div class="alert-priority-selector">
                    <h4>SÃ©lectionnez le niveau d'alerte :</h4>
                    <div class="priority-buttons">
                        <button class="priority-btn urgent" data-priority="urgent">URGENT</button>
                        <button class="priority-btn important" data-priority="important">IMPORTANT</button>
                        <button class="priority-btn information active" data-priority="information">INFORMATION</button>
                    </div>
                </div>
                
                <div class="message-input-wrapper">
                    <form action="{{path('app_new_alerte')}}">
                        <textarea class="alert-input" id="alertInput" placeholder="Tapez votre message d'alerte..." rows="3"></textarea>
                        <button class="send-alert-btn" id="sendAlertBtn" type="submit">ENVOYER ALERTE</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="{{ asset('js/unified-script.js') }}"></script>
</body>
</html>
