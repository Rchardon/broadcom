<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BROADCOM - Connexion</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
</head>
<body>
    <!-- Page de Connexion -->
    <div id="loginPage" class="page active">
        <div class="app-title">BROADCOM</div>
        
        <div class="container">
            <div class="form-container sign-in-container">
                <form id="loginForm" action="{{ path('app_login') }}" method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <h1>Se connecter</h1>
                    <div class="infield">
                        <input type="text" placeholder="Votre identifiant" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
                    </div>
                    <div class="infield">
                        <input type="password" placeholder="Mot de passe" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                    </div>
                    <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
                    <a href="#" class="forgot" id="forgotPasswordLink">Mot de passe oublié ?</a>

                    <input type="hidden" name="_target_path" value="/chat">

                    <button type="submit">Se connecter</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Page Code PIN -->
    <div id="pinPage" class="page">
        <div class="app-title">BROADCOM</div>
        
        <div class="container">
            <div class="form-container">
                <form id="pinForm">
                    <h1>Code PIN Personnel</h1>
                    <p class="pin-instruction">Saisissez votre code PIN pour réinitialiser votre mot de passe</p>
                    
                    <div class="infield">
                        <input type="password" placeholder="Code PIN" name="pin" id="pinCode" required maxlength="6"/>
                        <label></label>
                    </div>
                    
                    <div class="form-buttons">
                        <button type="button" class="cancel-btn" id="cancelPin">Annuler</button>
                        <button type="submit">Valider PIN</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Page Nouveau Mot de Passe -->
    <div id="resetPage" class="page">
        <div class="app-title">BROADCOM</div>
        
        <div class="container">
            <div class="form-container">
                <form id="resetForm">
                    <h1>Nouveau Mot de Passe</h1>
                    <p class="reset-instruction">Créez votre nouveau mot de passe</p>
                    
                    <div class="infield">
                        <input type="password" placeholder="Nouveau mot de passe" name="newPassword" id="newPassword" required/>
                        <label></label>
                    </div>
                    
                    <div class="infield">
                        <input type="password" placeholder="Confirmer mot de passe" name="confirmPassword" id="confirmPassword" required/>
                        <label></label>
                    </div>
                    
                    <div class="form-buttons">
                        <button type="button" class="cancel-btn" id="cancelReset">Annuler</button>
                        <button type="submit">Confirmer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="login.js"></script>
</body>
</html>
